<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#D5E9F6" />
            <stroke
                android:width="1dp"
                android:color="#4b9ed1" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#cfd8dc"
                android:endColor="#cfd8dc"
                android:angle="180" />
            <stroke
                android:width="1dp"
                android:color="#cfd8dc" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
</selector>